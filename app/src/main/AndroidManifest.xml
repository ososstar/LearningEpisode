<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.ososstar.learningepisode">
    <!-- adding internet permission -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/web_hi_res_512"
        android:label="@string/app_name"
        android:roundIcon="@drawable/web_hi_res_512_circle"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".account.ProfileViewActivity"></activity>
        <activity android:name=".account.ProfileActivity" />
        <activity android:name=".account.AccountModifyActivity" />
        <activity android:name=".account.AccountInsertActivity" />
        <activity android:name=".question.QuestionModifyActivity" />
        <activity android:name=".lesson.LessonModifyActivity" />
        <activity android:name=".question.QuestionInsertActivity" />

        <service
            android:name=".sslService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".lesson.LessonInsertActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".lesson.LessonActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".lesson.LessonListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".question.QuestionListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".course.CourseActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".course.CourseInsertActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".account.AccountsListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".course.CourseListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".account.LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/AppFullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".account.RegisterActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name=".HomeStudentActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".HomeAdminActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".course.CourseModifyActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
    </application>

</manifest>